@model IEnumerable<NhaKhoa.Models.DonThuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    <button>
        @Html.ActionLink("Export Excel", "ExportToExcel", null, new { @class = "btn btn-success" })
    </button>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhieuDatLich.IdNhaSi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TongTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_donthuoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chandoan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhieuDatLich.IdNhaSi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_donthuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chandoan)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_donthuoc }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_donthuoc }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_donthuoc })
            </td>
        </tr>
    }

</table>
