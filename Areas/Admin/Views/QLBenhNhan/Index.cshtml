﻿﻿﻿@model IEnumerable<NhaKhoa.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2 class="text-center">Quản lí bệnh nhân</h2>

<h2 class="text-center">
    <button class="btn btn-primary btn-create-new">
        @Html.ActionLink("Tạo tài khoản", "Create")
    </button>
</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Tên bệnh nhân
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Nghề nghiệp
        </th>
        <th>
            CCCD
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (item.GioiTinh == true)
                {
                    <span class="text-success">Nam</span>
                }
                else
                {
                    <span class="text-danger">Nữ</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @if (item.NgaySinh != null)
                {
                    @item.NgaySinh.ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgheNghiep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }

</table>